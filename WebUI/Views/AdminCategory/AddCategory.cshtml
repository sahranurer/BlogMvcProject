@model Entities.Concrete.Category
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<h2>AddCategory</h2>
<h1>Yeni Kategori Ekleme Syafası</h1>
<br />
@using (Html.BeginForm("AddCategory", "AdminCategory", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(c => c.CategoryName, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.CategoryName)
        <br /> <br />
        @Html.Label("Açıklamayı Yazınız")
        @Html.TextAreaFor(c => c.CategoryDescription, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.CategoryDescription)
        <br /> <br />
        <button id="btn1" class="btn btn-info">Kaydet</button>
    </div>
}

<script>
    $('#btn1').click(function () {
        swal({
            title: "Tebrikler!",
            text: "Başarılı Bir Şekilde Kaydettiniz!",
            icon: "success",
            button: "Aww yiss!",
        });

        setTimeout(function () {
            window.location.assign("Index");
            //3 saniye sonra yönlenecek
        }, 3000);
    })
</script>

