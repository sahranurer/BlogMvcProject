@model Entities.Concrete.Admin

@{
    ViewBag.Title = "AddAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>AddAdmin</h2>

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<br />
@using (Html.BeginForm("AddAdmin", "Authorization", FormMethod.Post))
{
<div class="form-group">
    @Html.Label("Admin Kullanıcı Adı")
    @Html.TextBoxFor(c => c.AdminUserName, new { @class = "form-control" })

    <br /> <br />
    @Html.Label("Şifreyi Giriniz")
    @Html.TextAreaFor(c => c.AdminPassword, new { @class = "form-control" })
    <br /> <br />
    @Html.Label("Role Seçiniz")
    @Html.TextAreaFor(x => x.AdminRole,new { @class = "form-control" })
    <br /> <br />
    <button id="btn1" class="btn btn-info">Kaydet</button>
</div>
}

<script>
    $('#btn1').click(function () {
        swal({
            title: "Tebrikler!",
            text: "Başarılı Bir Şekilde Kaydettiniz!",
            icon: "success",
            button: "Aww yiss!",
        });

        setTimeout(function () {
            window.location.assign("Index");
            //3 saniye sonra yönlenecek
        }, 3000);
    })
</script>