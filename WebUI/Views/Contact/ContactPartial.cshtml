            </li>
            <ul class="nav nav-treeview">
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="fas fa-inbox" style="color: darkgoldenrod"> Okunmamış Mesajlar &nbsp<span class="badge bg-warning float-right"></span></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="fas fa-inbox" style="color: gray"> Okunmuş Mesajlar &nbsp<span class="badge bg-gradient-gray float-right"></span></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="fas fa-inbox" style="color: red"> Önemli Mesajlar &nbsp<span class="badge bg-danger float-right"></span></i>
                    </a>
                </li>
            </ul>
            <li class="nav-item">
                <a href="/Message/Sendbox/" class="nav-link">
                    <i class="far fa-envelope"></i> Gönderilen Mesajlar
                    <span class="badge bg-primary float-right">@ViewBag.send</span>
                </a>
            </li>ViewBag.draft
