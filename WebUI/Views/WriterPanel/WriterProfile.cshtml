@model Entities.Concrete.Writer

@{
    ViewBag.Title = "WriterProfile";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
<div class="container-xl px-4 mt-4">
    <!-- Account page navigation-->
    <hr class="mt-0 mb-4">
    <div class="row">
        <div class="col-xl-4">
            <!-- Profile picture card-->
            <div class="card mb-4 mb-xl-0">
                <div class="card-header">Profile Picture</div>
                <div class="card-body text-center">
                    <!-- Profile picture image-->
                    <img class="img-account-profile rounded-circle mb-2" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRF9_WFigKE4Wt3gRzMi-VA_SOIB-YqYXKUeA&usqp=CAU" alt="">
                    <!-- Profile picture help block-->
                    <div class="small font-italic text-muted mb-4">JPG or PNG no larger than 5 MB</div>
                    <!-- Profile picture upload button-->
                    <button class="btn btn-primary" type="button">Upload new image</button>
                </div>
            </div>
        </div>
        <div class="col-xl-8">
            <!-- Account details card-->
            <div class="card mb-4">
                <div class="card-header">Account Details</div>
                <div class="card-body">

                    @using (Html.BeginForm("WriterProfile", "WriterPanel", FormMethod.Post))
                    {


                        <!--<!-- Form Group (username)-->
                        <div class="mb-3">
                            @*@Html.Label("Yazar Id", new { @class = "small mb-1" })*@
                            @Html.HiddenFor(x => x.WriterId, new { @class = "form-control" })
                        </div>
                        <div class="mb-3">
                            @Html.Label("Yazar Adı", new { @class = "small mb-1" })
                            @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control" })
                        </div>
                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (first name)-->
                            <div class="col-md-6">
                                @Html.Label("Yazar Soyad", new { @class = "small mb-1" })
                                @Html.TextBoxFor(x => x.WriterSurname, new { @class = "form-control" })
                            </div>
                            <!-- Form Group (last name)-->
                            <div class="col-md-6">
                                @Html.Label("Yazar Unvan ", new { @class = "small mb-1" })
                                @Html.TextBoxFor(x => x.WriterTitle, new { @class = "form-control" })
                            </div>
                        </div>
                        <!-- Form Row        -->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (organization name)-->
                            <div class="col-md-6">
                                @Html.Label("Yazar Mail", new { @class = "small mb-1" })
                                @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control" })
                            </div>
                            <!-- Form Group (location)-->
                            <div class="col-md-6">
                                @Html.Label("Yazar Password", new { @class = "small mb-1" })
                                @Html.TextBoxFor(x => x.WriterPassword, new { @class = "form-control" })
                            </div>
                        </div>
                        <!-- Form Group (email address)-->
                      
                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (phone number)-->
                            <div class="col-md-6">
                                @Html.Label("Yazar hakkında", new { @class = "small mb-1" })
                                @Html.TextBoxFor(x => x.WriterAbout, new { @class = "form-control" })
                            </div>
                            <div class="col-md-6">
                                @Html.Label("Yazar Görsel Linki", new { @class = "small mb-1" })
                                @Html.TextBoxFor(x => x.WriterImage, new { @class = "form-control" })
                            </div>

                            <!-- Save changes button-->
                        </div>
                        <button class="btn btn-success" >Değişiklikleri Uygula</button>
                    }


                </div>
            </div>
        </div>
    </div>
</div>

